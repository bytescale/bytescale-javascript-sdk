{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2016"],
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      // These mappings are relative to "baseUrl".
      // Remember to keep in sync with `webpack.config.js`
      "upload-js": ["../../lib/src"],
      "upload-js/*": ["../../lib/src/*"],
      "upload-js-examples": ["./"],
      "upload-js-examples/*": ["./*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules/**/*"]
}
