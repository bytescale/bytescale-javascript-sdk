{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2016"],
    "target": "es2015",
    "module": "es2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      // These mappings are relative to "baseUrl".
      // Remember to keep in sync with `webpack.config.js`
      "upload-js/*": ["./*"]
    }
  },
  "include": ["./src/**/*", "./ts-libs/**/*"]
}
